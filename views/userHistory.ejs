<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/main.css" />

    <title>Lego Collection</title>
</head>
<body>
    <header>
      <%- include('partials/navbar', {page:'/userHistory'}) %>
    </header>
    <main class="container mx-auto">
        <!-- Hero splash -->
        <div class="hero min-h-screen bg-base-200">
            <div class="hero-content text-center">
              <div class="max-w-md">
                <h1 class="text-5xl font-bold"><%= session.user.userName %></h1>
                <p class="py-6">User History: <%= session.user.email %></p>
              </div>
            </div>
          </div>
        <!-- Table -->
        <div class="overflow-x-auto">
            <table class="table table-zebra">
                <thead>
                    <tr>
                        <th>Login Date/Time</th>
                        <th>Client Information</th>
                    </tr>
                </thead>
                <tbody>
                    <% session.user.loginHistory.forEach(history=> { %>
                    <tr>
                        <td><%= new Date(history.dateTime).toDateString() %> - <%= new Date(history.dateTime).toTimeString() %></td>
                        <td><%= history.userAgent %></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div> 
    </main>
</body>
</html>