<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/main.css" />

    <title>Lego Collection</title>
</head>
<body>
    <header>
        <%- include('partials/navbar', {page:'/lego/addSet'}) %>
    </header>
    <main class="container mx-auto">
        <!-- Hero splash -->
        <div class="hero min-h-screen bg-base-200">
            <div class="hero-content text-center">
                <div class="max-w-md">
                    <h1 class="text-5xl font-bold">Add Set</h1>
                    <p class="py-6">Use the form below to add a new set to the collection.</p>
                </div>
            </div>
        </div> 
        <!-- Form -->
        <form action="/lego/addSet" method="POST" class="mt-10">
          <div class="form-control">
            <label class="label" for="name">
              <span class="label-text">Set Name</span>
            </label>
            <input type="text" id="name" name="name" class="input input-bordered" required>
          </div>
          
          <div class="form-control">
            <label class="label" for="year">
              <span class="label-text">Year</span>
            </label>
            <input type="number" id="year" name="year" class="input input-bordered" required>
          </div>
          
          <div class="form-control">
            <label class="label" for="num_parts">
              <span class="label-text">Number of Parts</span>
            </label>
            <input type="number" id="num_parts" name="num_parts" class="input input-bordered" required>
          </div>
          
          <div class="form-control">
            <label class="label" for="img_url">
              <span class="label-text">Image URL</span>
            </label>
            <input type="url" id="img_url" name="img_url" class="input input-bordered" required>
          </div>
          
          <div class="form-control">
            <label class="label" for="theme_id">
              <span class="label-text">Theme</span>
            </label>
            <select id="theme_id" name="theme_id" class="select select-bordered" required>
              <% themes.forEach(theme => { %>
                <option value="<%= theme.id %>"><%= theme.name %></option>
              <% }) %>
            </select>
          </div>
          
          <div class="form-control">
            <label class="label" for="set_num">
              <span class="label-text">Set Number</span>
            </label>
            <input type="text" id="set_num" name="set_num" class="input input-bordered" required>
          </div>
          
          <div class="form-control mt-6">
            <button type="submit" class="btn btn-primary">Add Set</button>
          </div>
        </form>
      </div>
    </div>
  </div>
    </main>
</body>
</html>